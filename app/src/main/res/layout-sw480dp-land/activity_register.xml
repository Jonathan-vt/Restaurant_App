<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/write_in_book"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="471dp"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/acceso"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="387dp"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="316dp"
            android:layout_margin="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="registroAcentral"
            android:orientation="vertical">

            <EditText
                android:id="@+id/userTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:hint="@string/language_user"
                android:minHeight="48dp"
                android:textColorHint="@color/black"
                android:autofillHints="username"
                android:inputType="text"
                android:textSize="35dp"/>

            <EditText
                android:id="@+id/correoTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:hint="@string/language_email"
                android:minHeight="48dp"
                android:textColorHint="@color/black"
                android:autofillHints="emailAddress"
                android:inputType="textEmailAddress"
                android:textSize="35dp"/>

            <EditText
                android:id="@+id/edit_txt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:hint="@string/language_password"
                android:minHeight="48dp"
                android:textColorHint="@color/black"
                android:autofillHints="password"
                android:inputType="textPassword"
                android:textSize="35dp"/>

            <EditText
                android:id="@+id/edit_txt_password_confir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:hint="@string/language_confirm_password"
                android:minHeight="48dp"
                android:textColorHint="@color/black"
                android:autofillHints="password"
                android:inputType="textPassword"
                android:textSize="35dp"/>

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:onClick="registroAlogin"
                android:text="@string/language_sign_in"
                android:textSize="35dp"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>