<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/old_book_open"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="242dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="25dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="386dp"
            android:layout_height="242dp"
            android:layout_margin="5dp"
            android:src="@drawable/iniciar_sesion" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="399dp"
        android:layout_height="355dp"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_inicio_user"
                android:layout_width="250dp"
                android:layout_height="2dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:autofillHints="username"
                android:gravity="center"
                android:hint="@string/language_user"
                android:inputType="text"
                android:minHeight="8dp"
                android:textColorHint="@color/black"
                android:textSize="40dp"/>

            <EditText
                android:id="@+id/edit_inicio_password"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="0.3"
                android:autofillHints="password"
                android:gravity="center"
                android:hint="@string/language_password"
                android:inputType="textPassword"
                android:minHeight="8dp"
                android:textColorHint="@color/black"
                android:textSize="40dp"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_weight="0.4"
                android:elevation="10dp"
                android:onClick="loginAcentral"
                android:text="@string/language_login"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_weight="0.4"
                android:elevation="10dp"
                android:minHeight="48dp"
                android:onClick="loginAregister"
                android:text="@string/language_sign_in"
                android:textSize="25dp"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>