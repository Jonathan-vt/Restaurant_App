<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondaryVariant"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="30"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:src="@drawable/acceso"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="70"
        android:baselineAligned="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <EditText
                android:id="@+id/edt_register_user"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="5dp"
                android:hint="@string/language_user"
                android:gravity="center"
                android:minHeight="48dp"
                android:textColor="?attr/colorOnSecondary"
                android:textColorHint="?attr/colorOnSecondary"
                android:autofillHints="username"
                android:inputType="text" />

            <EditText
                android:id="@+id/edt_register_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="5dp"
                android:hint="Name"
                android:gravity="center"
                android:minHeight="48dp"
                android:textColor="?attr/colorOnSecondary"
                android:textColorHint="?attr/colorOnSecondary"
                android:autofillHints="username"
                android:inputType="text" />

            <EditText
                android:id="@+id/edt_register_email"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                android:hint="@string/language_email"
                android:minHeight="48dp"
                android:textColor="?attr/colorOnSecondary"
                android:textColorHint="?attr/colorOnSecondary"
                android:autofillHints="emailAddress"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/edt_register_password"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="5dp"
                android:autofillHints="password"
                android:gravity="center"
                android:hint="@string/language_password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:textColor="?attr/colorOnSecondary"
                android:textColorHint="?attr/colorOnSecondary" />

            <EditText
                android:id="@+id/edt_register_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                android:hint="@string/language_confirm_password"
                android:minHeight="48dp"
                android:textColor="?attr/colorOnSecondary"
                android:textColorHint="?attr/colorOnSecondary"
                android:autofillHints="password"
                android:inputType="textPassword" />

            <CheckBox
                android:id="@+id/checkBoxRegister"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:layout_margin="5dp"
                android:text="accept terms and conditions"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:layout_marginHorizontal="110dp"
                android:layout_marginBottom="15dp"
                android:elevation="10dp"
                android:background="@drawable/button_rounded"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:text="@string/language_sign_in" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>