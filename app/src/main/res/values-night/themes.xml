<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Restaurant_App"
        parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/OrangeRed</item>
        <item name="colorPrimaryVariant">@color/holo_red_dark</item>
        <item name="colorOnPrimary">@color/material_dynamic_neutral_variant20</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray</item>
        <item name="colorSecondaryVariant">@color/DarkSlateGray</item>
        <item name="colorOnSecondary">@color/material_dynamic_neutral_variant80</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.Restaurant_App.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Restaurant_App.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Restaurant_App.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>